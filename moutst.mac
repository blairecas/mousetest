; vsync interrupt
VsyncInt:
	inc	VsyncCount
	inc	DblClickTimer
	rti

; keyboard interrupt
IntKbd:	mov	R0, -(SP)
	mov	@#177702, R0
	bit	#^B10000000, R0		; key pressed?
	bne	20$
	cmp	R0, #^B01001011		; is it 'space'?
	bne	10$
	mov	#320., MouseX
	mov	#140., MouseY
	br	20$
10$:	inc	Anykey
20$:	mov	(SP)+, R0
	rti

; xor mouse sprite at MouseX MouseY
XorMouse:
	; R4 was set earlier
	mov	#177012, R5
	mov	MouseOldY, R1
	mul	#SCRWID, R1
	mov	MouseOldX, R0
	mov	R0, R3				; preshifted sprite addition
	bic	#^B1111111111111000, R3		; 8-pix
	ash	#4., R3				; * 16 bytes (sprite size)
	asr	R0
	asr	R0
	asr	R0
	add	R1, R0
	add	#100000, R0			; R0 = mouse vaddr
	mov	R0, (R4)
	mov	PC, R0
	add	#MouSpr-., R0
	add	R3, R0				; adjust to preshifted sprite
	mov	#SCRWID-1, R1			; vaddr addition
	.rept	8.
	mov	(R0)+, R2
	xor	R2, (R5)
	inc	(R4)
	swab	R2
	xor	R2, (R5)
	add	R1, (R4)
	.endr	
	return


