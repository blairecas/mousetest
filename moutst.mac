SCRWID = 80.

Start:	mov	#MsgCls, R0
	call	PriStr	

	; start PPU code
	inc	PPComm
	mov	#PPUSta, R4		; run PPU code
	mov	#<PPUEnd-PPUSta/2>, R5
	call	PPURun
	; clear planes 1,2
	call	ClearPlanes12
	; initial printing vaddr
	mov	#SCRWID*4+100000+1, PrintAddr
	call	PrintLog

10$:	; PPU asks for exit?
	tst	PPComm
	bne	20$
	; release PPU memory and exit
	call	PPRele
	.exit

20$:	; PPU asks for printing?
	cmp	PPComm, #2
	bne	40$
	; print register then
	call	XorCurrent
	add	#SCRWID*9., PrintAddr
	cmp	PrintAddr, #SCRWID*280.+100000
	blo	30$
	mov	#SCRWID*4+100000+1, PrintAddr
30$:	call	PrintLog
	; set 'printing ends' flag
	mov	#3, PPcomm

40$:	; have double click?
	tst	CpuDblClick
	beq	50$
	clr	CpuDblClick
	call	ClearPlanes12
	call	XorCurrent

50$:	; TODO: what else?
	br	10$

MsgCls: .byte	033, 014, 110, 0

; print string with channel 0
; r0 = addr
PriStr:
	movb	(R0)+, R1
	beq	99$
	tstb	@#177564
	bpl	.-4
	movb	r1, @#177566
	br	pristr
99$:	return 


ClearPlanes12:
	mov	#176640, R4
	mov	#176642, R5
	mov	#100000, (R4)
	mov	#SCRWID*288., R3
	clr	(R5)
	inc	(R4)
	sob	R3, .-4
	return

XorCurrent:
	; R4, R5 must be already set to vaddr/vdata regs
	mov	PrintAddr, (R4)
	sub	#SCRWID*2, (R4)
	mov	#377, R0
	.rept	7.
	xor	R0, (R5)
	inc	(R4)
	.endr
	xor	R0, (R5)
	add	#SCRWID*8.-7., (R4)
	.rept	7.
	xor	R0, (R5)
	inc	(R4)
	.endr
	xor	R0, (R5)
	return

PrintLog:
	mov	Reg177400, R0
	mov	PrintAddr, R1
	call	PrintBinaryWord
	;mov	Reg177400, R0
	;mov	PrintAddr, R1
	;add	#10., R1
	;call	PrintOctalWord
	call	XorCurrent
	; depends on mouse keys - draw kub
	; R4, R5 already set earlier
	mov	CpuMouseRL, R2
	beq	99$
	mov	CpuMouseY, R1
	mul	#SCRWID, R1
	add	#100000, R1
	mov	CpuMouseX, R0
	asr	R0
	rol	R2
	asr	R0
	asr	R0
	add	R0, R1
	mov	R1, (R4)
	asl	R2
	mov	SprKub(R2), R0
	mov	#SCRWID, R1
	.rept	3
	bis	R0, (R5)
	add	R1, (R4)
	.endr
	bis	R0, (R5)
99$:	return

SprKub:
	.word	0, 0
	.word	^B0000000000001111
	.word	^B0000000011110000
	.word	^B0000111100000000
	.word	^B1111000000000000
	.word	^B0000111100001111
	.word	^B1111000011110000


PPComm:		.word	0	; PPU command
Reg177400:	.word	0
PrintAddr:	.word	0

CpuMouseX:	.word	0
CpuMouseY:	.word	0
CpuMouseRL:	.word	0
CpuDblClick:	.word	0

