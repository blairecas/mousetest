SquareWave:
	call	TestPrepare
	clr	R0	
10$:	bit	#400, R0
	beq	20$
	mov	#377, R1
	br	30$
20$:	clr	R1
30$:	call	PutB12
	inc	R0
	sob	R3, 10$
